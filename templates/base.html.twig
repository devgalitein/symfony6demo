<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" type="text/css" href="{{ asset('build/css/jquery.dataTables.min.css') }}">
        <script src="{{ asset('build/js/jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('build/js/jquery.dataTables.min.js') }}"></script>
        <link href="{{ asset('build/css/bootstrap.min.css') }}" rel="stylesheet" />
        <script src="{{ asset('build/js/bootstrap.min.js') }}" ></script>
        
        <style>
            .errors{
                color:red;
            }
        </style>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <form method="post">
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
                <div class="mb-3">
                    <a href="{{ path('app_dashboard') }}">Dashboard</a> ||
                    <a href="{{ path('app_product') }}">Product</a> ||
                    <a href="{{ path('app_user') }}">Users</a> ||
                    <a href="{{ path('app_person') }}">Person</a> ||
                    <a href="{{ path('app_task') }}">Task</a>
                </div>
                <div class="mb-3">
                    <strong>Language: </strong>
                    <a class="btn btn-info mr-1" href="{{ path(app.request.get('_route'), {_locale: 'en'}) }}">English</a>
                    <a class="btn btn-info mr-1" href="{{ path(app.request.get('_route'), {_locale: 'fr'}) }}">French</a>
                    <a class="btn btn-info mr-1" href="{{ path(app.request.get('_route'), {_locale: 'de'}) }}">German</a>         
                </div>
            {% endif %}
        </form>
        {% block body %}{% endblock %}
        
        
    </body>
</html>
